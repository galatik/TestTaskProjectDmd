@model RegisterViewModel
@{
    Layout = "_Layout";

    ViewData["Title"] = "Register";

    ViewData["stylesHrefs"] = new List<string>()
    {
        "/css/Account/account.css"
    };
}

<form asp-action="Register" asp-controller="account" method="post">
    <div style="height:80px" class="row justify-content-center">
        <legend class="col-auto">Register</legend>
    </div>
    <div class="form-group row">
        <label class="col-sm-3 col-form-label">Email:</label>
        <div class="col-sm-9">
            <input asp-for="Email" type="text" placeholder="Email" class="form-control">
        </div>
        <div class="col-sm-3"></div>
        <div class="col-sm-9"><span class="invalid-input" asp-validation-for="Email"></span></div>
    </div>
    <div class="form-group row">
        <label for="Username" class="col-sm-3 col-form-label">User name:</label>
        <div class="col-sm-9">
            <input type="text" asp-for="UserName" placeholder="User name" id="Username" class="form-control">
        </div>
        <div class="col-sm-3"></div>
        <div class="col-sm-9"><span class="invalid-input" asp-validation-for="UserName"></span></div>
    </div>
    <div class="form-group row">
        <label for="inputPassword" class="col-sm-3 col-form-label">Password:</label>
        <div class="col-sm-9">
            <input type="password" asp-for="Password" class="form-control" id="inputPassword" placeholder="Password">
        </div>
        <div class="col-sm-3"></div>
        <div class="col-sm-9"><span class="invalid-input" asp-validation-for="Password"></span></div>
    </div>
    <div class="form-group row">
        <label for="confirmPassword" class="col-sm-3 col-form-label">Confirm password:</label>
        <div class="col-sm-9">
            <input type="password" asp-for="ConfirmPassword" class="form-control" id="confirmPassword" placeholder="Confirm password">
        </div>
        <div class="col-sm-3"></div>
        <div class="col-sm-9"><span class="invalid-input" asp-validation-for="ConfirmPassword"></span></div>
    </div>
    <div class="form-check">
        <input class="form-check-input" type="checkbox" value="" id="rememberMe">
        <label class="form-check-label" asp-for="RememberMe" for="rememberMe">
            Remember me
        </label>
    </div>
    <div class="row justify-content-center">
        <div asp-validation-summary="ModelOnly" class="col-auto invalid-input"></div>
    </div>
    <div style="margin-top:30px" class="row">
        <div class="col-sm-4">
            <a asp-action="login" asp-controller="account">I have got account. Log in.</a>
        </div>
        <div class="col-sm-8">
            <div class="d-flex flex-row-reverse">
                <div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </div>
        </div>
    </div>
</form>

