<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/site.css">
    <title>Register</title>
</head>
@{ 
    int? taskid = (Nullable<int>) ViewData["taskid"];
}
<body>
    <nav class="navbar row navbar-dark bg-primary header">
        <div class="navbar-brand col-sm-4">Task Manager</div>
        <div class="col-2">
            <div class="row d-flex justify-content-around">
                <div class="navbar-text username">@User.Identity.Name</div>
                <ul class="navbar-nav">
                    <li class="nav-item active">
                        <a class="nav-link" asp-action="logout" asp-controller="account">Log out</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container-fluid">
        <div class="row">
            <div class="col-12 col-md-4 col-sm-6 col-lg-3  left-nav">
                <div class="row">
                    <div class="left-nav-head col-12">
                        <h5>Tasks</h5>
                    </div>
                </div>
                <div class="row nav-task-wrap">
                    <div class="col-12">
                        <partial name="_TerminalTasksPartialView" model="taskid"/>
                    </div>
                </div>
            </div>
            <div class="col-12 col-md-8 col-sm-6 col-lg-9">@RenderBody()</div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
</body>
</html>
